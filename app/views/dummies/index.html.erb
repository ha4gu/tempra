<p id="notice"><%= notice %></p>

<h1>Dummies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Detail</th>
      <th>Stock</th>
      <th>Ordered on</th>
      <th>Confirmed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dummies.each do |dummy| %>
      <tr>
        <td><%= dummy.title %></td>
        <td><%= dummy.detail %></td>
        <td><%= dummy.stock %></td>
        <td><%= dummy.ordered_on %></td>
        <td><%= dummy.confirmed %></td>
        <td><%= link_to "Show", dummy %></td>
        <td><%= link_to "Edit", edit_dummy_path(dummy) %></td>
        <td><%= link_to "Destroy", dummy, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

